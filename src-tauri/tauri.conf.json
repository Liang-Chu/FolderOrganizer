{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Folder Organizer",
  "version": "1.1.0",
  "identifier": "com.sicys.folder-organizer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Folder Organizer",
        "width": 1080,
        "height": 700,
        "minWidth": 600,
        "minHeight": 600,
        "maximizable": true,
        "maximized": true,
        "visible": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/Liang-Chu/FolderOrganizer/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDFBQUQ4QzYwMkExODJFRUYKUldUdkxoZ3FZSXl0R2xtUkpVeE8rNWRKL2E5OFp2bnp1TUJpdzc5UjVrSnA3RjdYeDYzZDFWOGcK"
    }
  }
}
