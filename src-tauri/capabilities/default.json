{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main", "update-notification"],
  "permissions": [
    "core:default",
    "core:window:allow-close",
    "core:window:allow-create",
    "core:window:allow-current-monitor",
    "core:webview:default",
    "core:webview:allow-create-webview-window",
    "core:event:default",
    "opener:default",
    "opener:allow-open-path",
    "opener:allow-reveal-item-in-dir",
    "dialog:default",
    "autostart:default",
    "updater:default"
  ]
  ,
  "defaultRules": [
      {
        "id": "default-download-clean",
        "name": "Download Clean",
        "description": "Deletes files in the Downloads folder that are older than 3 days.",
        "enabled": false,
        "folder": "Downloads",
        "rules": [
          {
            "id": "default-download-clean-rule",
            "name": "Download Clean",
            "description": "Deletes files older than 3 days in Downloads.",
            "enabled": false,
            "condition": {
              "type": "Always"
            },
            "condition_text": "*",
            "action": {
              "type": "Delete",
              "after_days": 3
            },
            "whitelist": [],
            "match_subdirectories": false
          }
        ]
      }
  ]
  ,
  "default_sort_root": "C:\\Users\\<username>\\Sorted"
}
